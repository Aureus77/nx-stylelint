{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackageNames": ["nx"],
      "matchPackagePrefixes": ["@nrwl/"],
      "excludePackageNames": ["@nrwl/nx-cloud"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
