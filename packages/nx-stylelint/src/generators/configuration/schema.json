{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxStylelintProjectConfiguration",
  "cli": "nx",
  "title": "Add stylelint configuration to a project",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "format": {
      "type": "string",
      "description": "Stylelint output formatter (https://stylelint.io/user-guide/usage/options#formatter).",
      "default": "string",
      "enum": ["compact", "json", "string", "tap", "unix", "verbose"],
      "x-prompt": {
        "message": "Which formatter would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "compact",
            "label": "compact"
          },
          {
            "value": "json",
            "label": "json"
          },
          {
            "value": "string",
            "label": "string (default)"
          },
          {
            "value": "tap",
            "label": "tap"
          },
          {
            "value": "unix",
            "label": "unix"
          },
          {
            "value": "verbose",
            "label": "verbose"
          }
        ]
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    },
    "style": {
      "description": "The style extension which is used for style files. Will be added to the lintFilePatterns which contains CSS files as a default value.",
      "type": "string",
      "default": "css",
      "x-prompt": {
        "message": "Which stylesheet format do you use for this project?",
        "type": "list",
        "items": [
          {
            "value": "css",
            "label": "CSS (.css) (default)"
          },
          {
            "value": "scss",
            "label": "SASS (.scss) [ http://sass-lang.com ]"
          },
          {
            "value": "less",
            "label": "LESS (.css)  [ http://lesscss.org   ]"
          }
        ]
      }
    }
  },
  "required": ["project"]
}
