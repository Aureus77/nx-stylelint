{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "StylelintProject",
  "title": "Add Stylelint Configuration to a project",
  "description": "Add Stylelint Configuration to a project",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "format": {
      "type": "string",
      "description": "Stylelint Output formatter (https://stylelint.io/user-guide/usage/options#formatter).",
      "default": "string",
      "x-prompt": {
        "message": "Which formatter would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "compact",
            "label": "compact"
          },
          {
            "value": "json",
            "label": "json"
          },
          {
            "value": "string",
            "label": "string"
          },
          {
            "value": "tap",
            "label": "tap"
          },
          {
            "value": "unix",
            "label": "unix"
          },
          {
            "value": "verbose",
            "label": "verbose"
          }
        ]
      }
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
